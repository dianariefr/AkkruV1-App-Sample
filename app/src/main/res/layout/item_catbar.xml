<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:elevation="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_BarThumbn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/TV_BarName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TV_BarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:layout_constraintBottom_toTopOf="@id/TV_BarAddress"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/TV_BarAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="9dp"
            app:layout_constraintBottom_toTopOf="@id/TV_BarStatus"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/TV_BarStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:textSize="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>